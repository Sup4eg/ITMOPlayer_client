<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:background="@color/white"
                    android:paddingLeft="27dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/f_name"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:autofillHints="Kirill"
                    tools:targetApi="o" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/second_name"
                    android:background="@color/white"
                    android:paddingLeft="27dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/s_name"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:autofillHints="Trezubov"
                    tools:targetApi="o" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_login"
                    android:background="@color/white"
                    android:paddingLeft="27dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/login"
                    android:layout_width="249dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:autofillHints="Sup_4eg"
                    tools:targetApi="o" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:background="@color/white"
                    android:paddingLeft="27dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:autofillHints="kirilltrezubov@yandex.ru"
                    android:id="@+id/email"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:inputType="textEmailAddress"
                    tools:targetApi="o" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:background="@color/white"
                    android:paddingLeft="27dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:inputType="textPassword" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/chose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/image_button"
                    android:textAllCaps="false"
                    android:layout_marginLeft="27dp"
                    android:textSize="20dp"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="130dp"
                    android:layout_height="146dp"
                    android:layout_marginLeft="10dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </LinearLayout>

            <EditText
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:layout_marginLeft="20dp"
                android:textStyle="italic"
                android:background="@color/white"
                android:importantForAutofill="no"
                tools:targetApi="o"
                android:inputType="text" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:layout_marginLeft="27dp"
                android:textSize="20dp"
                android:textColor="@color/blue"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="27dp"
                    android:text="@string/account_question"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>