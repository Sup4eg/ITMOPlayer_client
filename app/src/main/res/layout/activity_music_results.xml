<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicResults">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_text_backgroud">

            <TextView
                android:id="@+id/font_awesome_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginRight="8dp"
                android:paddingVertical="8dp"
                android:text="@string/font_awesome_serch"
                android:textSize="27dp" />

            <EditText
                android:id="@+id/music_request_results"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:alpha="0.45"
                android:paddingVertical="8dp"
                android:paddingLeft="13dp"
                android:text="@string/search_music"
                android:textColor="@color/black"
                android:textSize="20dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="23dp"
            android:text="@string/searching_results"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/result_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/go_to_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="45"
                        android:text="@string/font_awesome_user"
                        android:textSize="32dp" />

                    <TextView
                        android:id="@+id/go_to_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="22dp"
                        android:text="@string/font_awesome_serch"
                        android:textColor="@color/blue"
                        android:textSize="32dp" />

                    <TextView
                        android:id="@+id/go_to_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="45"
                        android:text="@string/font_awesome_clock"
                        android:textSize="32dp" />
                </LinearLayout>
            </RelativeLayout>

        </FrameLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>